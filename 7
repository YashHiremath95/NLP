7th
import nltk
from nltk.corpus import treebank
from nltk.tag.hmm import HiddenMarkovModelTrainer

# Download corpus (only once)
nltk.download('treebank')

# Load tagged sentences
data = treebank.tagged_sents()

# Train on first 3000 sentences
trainer = HiddenMarkovModelTrainer()
tagger = trainer.train_supervised(data[:3000])

# Test on a Treebank sentence (untagged)
test_sentence = [word for word, tag in data[3001]]
print("Test Sentence:", test_sentence)

# Predict POS tags
print("Tagged Output:", tagger.tag(test_sentence))