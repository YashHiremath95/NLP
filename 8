import re

def ner(sentence):
    # Define patterns
    person_pattern = r'\b[A-Z][a-z]+\s[A-Z][a-z]+\b'  # First + Last name
    location_pattern = r'\b[A-Z][a-z]+(?:\s[A-Z][a-z]+)*\b'  # Place names or proper nouns

    # Find matches
    persons = re.findall(person_pattern, sentence)
    locations = re.findall(location_pattern, sentence)

    # Remove names already identified as persons
    locations = [loc for loc in locations if loc not in persons]

    return persons, locations

# Example usage
sentence = "John Doe visited Paris last summer."
persons, locations = ner(sentence)

print("Persons:", persons)
print("Locations:", locations)

